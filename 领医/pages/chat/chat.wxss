/* pages/index/chat/chat.wxss */

page {
  background-color: RGBA(253, 249, 249, 1);
}

.list {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* margin-top: 16rpx; */
  box-sizing: border-box;
  padding: 26rpx 0rpx;
}

.time {
  display: inline-block;
  line-height: 42rpx;
  padding: 0rpx 18rpx;
  background-color: RGBA(0, 0, 0, 0.2);
  border-radius: 4rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  margin: 0 auto;
}

.chatData {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 25rpx;
  margin-top: 30rpx;
}

.logo {
  width: 75rpx;
  height: 75rpx;
  /* background-color: red; */
  border-radius: 50%;
}

.left {
  display: flex;
  justify-content: flex-start;
  margin-top: 16rpx;
}

.right {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.left_main {
  max-width: 497rpx;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  margin-top: 15rpx;
  background-color: rgba(255, 255, 255, 1);
  border-radius: 0rpx 5rpx 5rpx 10rpx;
  margin-left: 16rpx;
}

.right_main {
  max-width: 497rpx;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 1);
  margin-top: 15rpx;
  background-color: RGBA(48, 116, 255, 1);
  border-radius: 5rpx 0rpx 5rpx 10rpx;
  margin-right: 16rpx;
}

.ipt {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: rgba(255, 255, 255, 1);
  box-sizing: border-box;
  padding: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.sendImg {
  width: 52rpx;
  height: 46rpx;
}

.sendIpt {
  width: 480rpx;
  height: 100%;
  border: none;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  border-bottom: 1rpx solid RGBA(229, 229, 229, 1);
}

.ph {
  color: RGBA(153, 153, 153, 1);
  font-size: 28rpx;
}

.send {
  width: 108rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 1);
  background: linear-gradient(-45deg, rgba(37, 68, 224, 1), rgba(48, 116, 255, 1));
  border-radius: 4rpx 4rpx 4rpx 4rpx;
}

.head {
  width: 100%;
  height: 130rpx;
  background-color: rgba(255, 255, 255, 1);
  box-sizing: border-box;
  padding: 0rpx 14rpx;
  display: flex;
  align-items: center;
}

.close {
  width: 160rpx;
  height: 76rpx;
  box-sizing: border-box;
  border-left: 1rpx solid RGBA(220, 220, 220, 1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left:auto; 
}

.close_title {
  font-size: 24rpx;
  line-height: 50rpx;
  color: rgba(153, 153, 153, 1);
}
.icon-guanji{
  font-size: 30rpx;
  color: RGBA(153, 153, 153, 1);
}
.listLog {
  width: 88rpx;
  height: 88rpx;
  border-radius:50%; 
}

.listRes {
  margin-left: 25rpx;
}

.res_title {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.res_title .iconfont {
  font-size: 32rpx;
  color: RGBA(70, 144, 255, 1);
  margin-left: 10rpx;
}

.res_mintitle {
  font-size: 25rpx;
  color: rgba(153, 153, 153, 1);
  margin-top: 10rpx;
}

.res_mintitle span {
  padding: 0rpx 10rpx;
  font-size: 24rpx;
}

.main_img{
  width: 100rpx;
}
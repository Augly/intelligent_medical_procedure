.switchover{
  width: 100%;
}
.switchover-item{
  padding: 34rpx 50rpx;
  position: relative;
  background-image: url(https://lingyiil.dazhu-ltd.cn/public/static/program/images/qie17.png);
  background-position: 75rpx bottom; 
  background-repeat: no-repeat;
  background-size: 600rpx 2rpx;
  clear: both;
  overflow: hidden;
}
.switchover-head{
  padding: 34rpx 30rpx;
}
.switchover-img{
  width: 215rpx;
  height: 142rpx;
  float: left;
}
.switchover-text{
  width: 454rpx;
  height: 142rpx;
  float: right;
}
.switchover-item-hover{
  background-image: url(https://lingyiil.dazhu-ltd.cn/public/static/program/images/qie16.png),url(https://lingyiil.dazhu-ltd.cn/public/static/program/images/qie17.png);
  background-position: left center,75rpx bottom; 
  background-repeat: no-repeat, no-repeat;
  background-size: 7rpx 95rpx, 600rpx 2rpx;
}
.switchover-headline{
  height: 31rpx;
  line-height: 31rpx;
  font-size: 32rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color:rgba(51,51,51,1);
}
.switchover-headline-head{
  margin-top: 36rpx;
}
.switchover-headline-s{
  display: inline;
  font-size: 20rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(51,51,51,1);
}
.switchover-subhead{
  height: 23rpx;
  line-height: 23rpx;
  font-size: 24rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color:rgba(153,153,153,1);
  margin-top: 42rpx;
}
.switchover-subhead-head{
  margin-top: 34rpx;
}
.switchover-subhead-b{
  display: inline;
  font-weight: bold;
  color:#666666;
}
.switchover-right{
  position: absolute;
  right: 50rpx;
  top: 50%;
  margin-top: -11.5rpx;
  height: 23rpx;
  line-height: 23rpx;
  font-size: 24rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(153,153,153,1);
}
.switchover-right-arrows{
  background-image:url(https://lingyiil.dazhu-ltd.cn/public/static/program/images/qie15.png);
  background-repeat: no-repeat;
  background-size: 14rpx 22rpx;
  padding-right: 33rpx;
  background-position: right center;
}